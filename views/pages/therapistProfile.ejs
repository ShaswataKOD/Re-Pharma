<% layout("/layouts/boilerplate") %>
    <style>
        body { background-color: #e8effc; }
        .profile-card { background-color: white; border-radius: 12px; }
        .left-card { background: #ffe6c4; border-radius: 12px; padding: 20px; }
        .profile-img img { width: 120px; border: 5px solid white; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); }
        .text-orange { color: #f57c00; }
        .btn-warning { background-color: #f57c00; border: none; }
        .btn-warning:hover { background-color: #d16b00; }
        .social-icons i { font-size: 18px; margin-right: 15px; cursor: pointer; color: #555; }
        .social-icons i:hover { color: #007bff; }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="profile-card p-4 shadow-lg">
            <div class="row">
                <!-- Left Side -->
                <div class="col-md-4 text-center left-card">
                    <div class="profile-img">
                        <img src="<%= therapist.profileImage %>" alt="Profile Image" class="rounded-circle">
                    </div>
                    <h4 class="mt-3 fw-bold"><%= therapist.name %></h4>
                    <p class="text-muted"><%= therapist.specialization %></p>
                    <p><i class="fas fa-phone-alt text-warning"></i> <%= therapist.contact %></p>
                    <p><i class="fas fa-envelope text-warning"></i> <%= therapist.email %></p>
                    <p><i class="fas fa-map-marker-alt text-warning"></i> <%= therapist.location %></p>
                </div>
                <!-- Right Side -->
                <div class="col-md-8 right-card">
                    <p class="text-orange fw-bold">HELLO I'M</p>
                    <h2 class="fw-bold text-primary"><%= therapist.name %>!</h2>
                    <p class="text-muted"><%= therapist.specialization %></p>
                    <p><%= therapist.description %></p>
                    <div class="d-flex gap-3">
                        <a href="/users/chat/<%= therapist.user._id %>" class="btn btn-primary">
                            <i class="fas fa-comment-alt"></i> Chat
                        </a>
                        <% if (user.role === "patient") { %>
                            <form action="/consultations/request/<%= therapist.user._id %>" method="POST">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-user-md"></i> Request Consultation
                                </button>
                            </form>
                        <% } %>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</body>
